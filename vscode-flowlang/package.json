{
  "name": "flowlang",
  "displayName": "FlowAiLang",
  "description": "FlowAiLang language support for VS Code",
  "version": "0.0.2",
  "publisher": "flow-ai-Morocco",
  "repository": {
    "type": "git",
    "url": "https://github.com/flow-ai-morocco"
  },
  "engines": {
    "vscode": "^1.80.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "icon": "images/icon.png",
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "flowlang",
        "aliases": [
          "FlowAiLang",
          "flowlang"
        ],
        "extensions": [
          ".flow"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "iconThemes": [
      {
        "id": "flowlang-icons",
        "label": "FlowLang Icons",
        "path": "./icons/flow-file-icon.json"
      }
    ],
    "grammars": [
      {
        "language": "flowlang",
        "scopeName": "source.flowlang",
        "path": "./syntaxes/flowlang.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "flowlang",
        "path": "./snippets/snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "FlowLang Configuration",
      "properties": {
        "flowlang.enableLinting": {
          "type": "boolean",
          "default": true,
          "description": "Enable linting for FlowLang files"
        },
        "flowlang.pathToFlow": {
          "type": "string",
          "default": "${workspaceFolder}/scripts/run.py",
          "description": "Path to the FlowLang Python script"
        },
        "flowlang.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to the Python interpreter to use for running FlowLang"
        }
      }
    },
    "tokenColors": [
      {
        "scope": [
          "keyword.control.flowlang",
          "keyword.operator.flowlang"
        ],
        "settings": {
          "foreground": "#C586C0",
          "fontStyle": "bold"
        }
      },
      {
        "scope": "entity.name.function.flowlang",
        "settings": {
          "foreground": "#DCDCAA"
        }
      },
      {
        "scope": "entity.name.type.flowlang",
        "settings": {
          "foreground": "#4EC9B0"
        }
      },
      {
        "scope": "string.quoted.double.flowlang",
        "settings": {
          "foreground": "#CE9178"
        }
      },
      {
        "scope": "constant.numeric.flowlang",
        "settings": {
          "foreground": "#B5CEA8"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:client && npm run compile:server",
    "compile:client": "cd client && npm run compile",
    "compile:server": "cd server && npm run compile",
    "watch": "concurrently \"npm:watch:client\" \"npm:watch:server\"",
    "watch:client": "cd client && npm run watch",
    "watch:server": "cd server && npm run watch",
    "postinstall": "npm install --prefix client && npm install --prefix server",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.0",
    "@vscode/test-electron": "^2.3.9",
    "concurrently": "^9.2.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "sharp": "^0.34.5",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8",
    "vscode-uri": "^3.1.0"
  }
}