{
  "name": "flow-ai-lang",
  "displayName": "FlowAiLang",
  "description": "FlowAiLang language support for VS Code",
  "version": "0.0.1",
  "publisher": "flow-ai-Morocco",
  "engines": {
    "vscode": "^1.80.0",
    "node": ">=16.0.0 <17.0.0 || >=18.0.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "flow-ai-lang",
        "aliases": [
          "FlowAiLang",
          "flow-ai-lang"
        ],
        "extensions": [
          ".flow"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "flowlang",
        "scopeName": "source.flowlang",
        "path": "./syntaxes/flowlang.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "flowlang",
        "path": "./snippets/snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "FlowLang Configuration",
      "properties": {
        "flowlang.enableLinting": {
          "type": "boolean",
          "default": true,
          "description": "Enable linting for FlowLang files"
        },
        "flowlang.pathToFlow": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Path to the FlowLang executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:client && npm run compile:server",
    "compile:client": "cd client && npm run compile",
    "compile:server": "cd server && npm run compile",
    "watch": "concurrently \"npm:watch:client\" \"npm:watch:server\"",
    "watch:client": "cd client && npm run watch",
    "watch:server": "cd server && npm run watch",
    "postinstall": "npm install --prefix client && npm install --prefix server",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.7",
    "@vscode/test-electron": "^2.1.2",
    "concurrently": "^9.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.1",
    "vscode-languageserver": "^8.0.1",
    "vscode-languageserver-textdocument": "^1.0.4"
  }
}
